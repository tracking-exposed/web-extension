{
  "name": "webtrex",
  "version": "0.0.1",
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@rollup/plugin-alias": "^3.0.0",
    "@rollup/plugin-replace": "^2.3.0",
    "@rollup/plugin-strip": "^1.3.1",
    "babel-jest": "^24.9.0",
    "chokidar": "^3.3.1",
    "dotenv": "^8.2.0",
    "jest": "^24.9.0",
    "jest-webextension-mock": "^3.5.0",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.29.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-livereload": "^1.0.4",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^5.1.1",
    "rollup-plugin-terser": "^5.2.0",
    "web-ext": "^4.0.0",
    "webextension-polyfill": "^0.6.0"
  },
  "scripts": {
    "start": "run-s build dev",
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "dist": "run-s build lint pack",
    "lint": "web-ext lint",
    "pack": "web-ext build",
    "test": "jest",
    "test:watch": "jest --watch",
    "dev": "run-p start:chromium build:watch",
    "dev:firefox": "run-p start:firefox build:watch",
    "start:firefox": "web-ext run --target=firefox-desktop --firefox-binary=$(which firefox) --start-url=www.facebook.com",
    "start:chromium": "web-ext run --target=chromium --chromium-binary=$(which chromium-browser) --start-url=www.facebook.com"
  },
  "dependencies": {
    "bs58": "^4.0.1",
    "svelte": "^3.0.0",
    "sveltestrap": "^3.2.8",
    "tweetnacl": "^1.0.1",
    "uuid": "^3.3.3"
  },
  "webExt": {
    "sourceDir": "build",
    "artifactsDir": "dist",
    "build": {
      "overwriteDest": true
    }
  },
  "jest": {
    "setupFiles": [
      "jest-webextension-mock"
    ]
  }
}
