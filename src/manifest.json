{
  "manifest_version": 2,

  "name": "__MSG_extensionName__",
  "short_name": "FbTREX",
  "description": "__MSG_extensionDescription__",
  "version": "2.0.0",
  "author": "Alberto Granzotto, Claudio Agosti, and the contributors in https://github.com/tracking-exposed/web-extension",

  "default_locale": "en",

  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "permissions": [
    "storage",
    "cookies",
    "http://localhost:8100/",
    "https://*.facebook.com/",
    "https://*.tracking.exposed/"
  ],

  "background": {
    "scripts": ["browser-polyfill.js", "background/bundle.js"],
    "persistent": false
  },

  "browser_action": {
    "default_popup": "default_popup/index.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["https://*.facebook.com/*"],
      "js": ["browser-polyfill.js", "content_scripts/facebook.com/bundle.js"],
      "css": ["content_scripts/facebook.com/bundle.css"]
    }
  ],

  "web_accessible_resources": ["*.png"],

  "browser_specific_settings": {
    "gecko": {
      "id": "tracking.exposed.extension@gmail.com",
      "strict_min_version": "48.0"
    }
  }
}
